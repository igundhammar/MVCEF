@using System.Collections
@model IEnumerable<CDCollection.Models.Album>

@{
    ViewData["Title"] = "Albums";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    await Html.RenderPartialAsync("Search");
}

<h1>Albums</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
        {
            <tr>
                <td data-label="@(Html.DisplayNameFor(model => model.Name)):">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td data-label="@(Html.DisplayNameFor(model => model.Year)):">
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td data-label="@(Html.DisplayNameFor(model => model.Genre)):">
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td data-label="@(Html.DisplayNameFor(model => model.Artist)):">
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
